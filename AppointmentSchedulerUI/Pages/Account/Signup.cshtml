@page
@model AppointmentSchedulerUI.Pages.SignupModel
@{
}

<div>
    <form method="post">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AccountToSave.UserName"></label>
            </div>
            <div class="col-5">
                <input asp-for="AccountToSave.UserName"/>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AccountToSave.Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="AccountToSave.Email"/>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AccountToSave.Password"></label>
            </div>
            <div class="col-5">
                <input asp-for="AccountToSave.Password" type="password"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AccountToSave.ConfirmPassword"></label>
            </div>
            <div class="col-5">
                <input asp-for="AccountToSave.ConfirmPassword" type="password"/>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>