@page
@model AppointmentSchedulerUI.Pages.NewFolder.LoginModel
@{
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.UserName"></label>
            </div>
            <div class="col-5">
                <input asp-for="Credential.UserName" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input asp-for="Credential.Password" type="password" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>