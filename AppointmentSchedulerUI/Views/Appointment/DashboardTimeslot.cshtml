@model AppointmentSchedulerUILibrary.AppointmentDTOs.CreateAppointmentDTO
@using System.Collections
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Choose timeslot";
}

<h2>Choose timeslot</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="datetime">Available time slots:</label>
                @Html.DropDownListFor(model => model.TimeSlot, new SelectList(ViewBag.TimeSlotList))
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />

            <input type="submit" value="Save appointment" class="btn btn-primary">
        </form>
        </>
    </div>
</div>