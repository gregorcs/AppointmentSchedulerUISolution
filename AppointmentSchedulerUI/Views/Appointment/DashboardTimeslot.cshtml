@{
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="datetime">Available time slots:</label>
                @Html.DropDownListFor(model => model.TimeSlot, new SelectList(ViewData["TimeslotList"] as IEnumerable))
            </div>
            <div class="form-group">
                <label for="details">Message</label>
                <textarea></textarea>
            </div>
            <input type="submit" value="Save appointment" class="btn btn-primary">
        </form>
        </>
    </div>
</div>