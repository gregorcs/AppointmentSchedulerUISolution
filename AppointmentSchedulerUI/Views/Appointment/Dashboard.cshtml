@model AppointmentSchedulerUILibrary.AppointmentDTOs.GetAppointmentDTO
@using System.Collections
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@{
    ViewData["Title"] = "Dashboard";
}

<h2>Appointments</h2>
@functions {

}

<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="datetime">Day:</label>
                <input asp-for="Time" name="datetime"  type="date"
                min="@DateTime.Now.Date.ToString("yyyy-MM-dd")"
                max="@DateTime.Now.Date.AddYears(1).ToString("yyyy-MM-dd")">
                <input type="button" value="Search" onclick="location.href='@Url.Action("Dashboard", "Appointment", new { Date = @Model?.Time })'" />
            </div>
            <div class="form-group">
                <label for="datetime">Available time slots:</label>
                @Html.DropDownListFor(model => model.TimeSlot, new SelectList(ViewData["TimeslotList"] as IEnumerable))
            </div>
            <div class="form-group">
                <label for="employees">Employee:</label>
                @Html.DropDownListFor(model => model.Username, new SelectList(ViewData["EmployeeNameList"] as IEnumerable))
            </div>
            <div class="form-group">
                <label for="job-types">Job type:</label>
                @Html.DropDownListFor(model => model.JobType, new SelectList(ViewData["JobTypeList"] as IEnumerable))
            </div>
            <div class="form-group">
                <label for="details">Message</label>
                <textarea></textarea>
            </div>
            <input type="submit" value="Book appointment" class="btn btn-primary">
        </form>
        </>
    </div>
</div>