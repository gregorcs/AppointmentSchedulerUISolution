@{
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="DashboardTimeslot">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="datetime">Day:</label>
                <input asp-for="Date" type="text"
                       min="@DateTime.Now.Date.ToString("yyyy-MM-dd")"
                       max="@DateTime.Now.Date.AddYears(1).ToString("yyyy-MM-dd")">
            </div>
            <input type="submit" value="Select Day" class="btn btn-primary">
        </form>
        </>
    </div>
</div>