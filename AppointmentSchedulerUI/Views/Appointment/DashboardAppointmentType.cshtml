@using System.Collections
@model AppointmentSchedulerUILibrary.AppointmentDTOs.CreateAppointmentDTO
@{
    ViewData["Title"] = "Choose appointment type";
}

<h2>Choose appointment type</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="DashboardEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="job-types">Job type:</label>
                @Html.DropDownListFor(model => model.AppointmentTypeId, new SelectList(ViewBag.JobTypeList, "Id","Name"))
            </div>
            <input type="submit" value="Select Type" class="btn btn-primary">
        </form>
        </>
    </div>
</div>